@model IEnumerable<HospitalManagementProject.Models.registration>

@{
    ViewBag.Title = "Dashboard";
}

<h2>Patient Registration List</h2>
<p class="text-success"> @TempData["edit"]</p>
<p class="text-danger"> @TempData["deleted"]</p>
<p class="text-danger"> @TempData["notdeleted"]</p>

<table class="table table-danger table-hover">
    <tr>
        <th>
            Patient Name
        </th>
        <th>
            Gender
        </th>
        <th>
            Date of registration
        </th>
        <th>
            city
        </th>
        <th>

        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.r_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.r_Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.r_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.r_city)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.r_contact)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.r_id }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.r_id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
